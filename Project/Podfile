source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/skedgo/PodSpecs.git'

use_frameworks!
platform :ios, '9.3'

def shared_pods
  pod 'RxSwift',        '~> 3.0'
  pod 'RxCocoa',        '~> 3.0'
  pod 'Marshal'

  pod 'AFNetworking'
  pod 'ASPolygonKit'
  pod 'ASPolylineView'
  pod 'SGPulsingAnnotationView'
  pod 'KeychainAccess'
  pod 'KVNProgress'
  pod 'MAKVONotificationCenter'
  pod 'SwiftyJSON'
  pod 'OAuthSwift'
end

target 'TripKit' do
  shared_pods
end

target 'TripKitTests' do
  shared_pods
  
  pod 'RxBlocking',     '~> 3.0'
  pod 'RxTest',         '~> 3.0'
end
