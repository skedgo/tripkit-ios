source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/skedgo/PodSpecs.git'

use_frameworks!
platform :ios, '8.0'

def shared_pods
  pod 'SGCoreKit/Core', git: 'https://github.com/skedgo/shared-ios.git', branch: 'feature/iOS10'
  pod 'SGCoreKit/Rx',   git: 'https://github.com/skedgo/shared-ios.git', branch: 'feature/iOS10'
  pod 'SGSearchKit',    git: 'https://github.com/skedgo/shared-ios.git', branch: 'feature/iOS10'
  pod 'SGCoreUIKit',    git: 'https://github.com/skedgo/shared-ios.git', branch: 'feature/iOS10'
  pod 'SGUIKit',        git: 'https://github.com/skedgo/shared-ios.git', branch: 'feature/iOS10'
  pod 'SGBookingKit',   git: 'https://github.com/skedgo/shared-ios.git', branch: 'feature/iOS10'
  
  pod 'RxSwift',        git: 'https://github.com/ReactiveX/RxSwift.git'
  pod 'RxCocoa',        git: 'https://github.com/ReactiveX/RxSwift.git'

  pod 'AFNetworking'
  pod 'SGPulsingAnnotationView'

  # These can be removed, once their Swift3 versions are the defaults
  pod 'OAuthSwift',     git: 'https://github.com/OAuthSwift/OAuthSwift.git' # '~> 1.0'
end

target 'TripKit' do
  shared_pods
end

target 'TripKitTests' do
  shared_pods
  
  pod 'RxBlocking',    git: 'https://github.com/ReactiveX/RxSwift.git'
  pod 'RxTests',       git: 'https://github.com/ReactiveX/RxSwift.git'
end
