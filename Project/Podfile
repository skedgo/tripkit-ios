source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/skedgo/PodSpecs.git'

use_frameworks!
platform :ios, '9.3'

def shared_pods
  pod 'RxSwift', git: 'https://github.com/ReactiveX/RxSwift.git', branch: 'swift4.0' #       '~> 3.0'
  pod 'RxCocoa', git: 'https://github.com/ReactiveX/RxSwift.git', branch: 'swift4.0' #       '~> 3.0'
  pod 'Marshal'

  pod 'Kingfisher'
  pod 'ASPolygonKit'
  pod 'ASPolylineView'
  pod 'SGPulsingAnnotationView'
  pod 'KeychainAccess', git: 'https://github.com/kishikawakatsumi/KeychainAccess.git', branch: 'xcode9'
  pod 'KVNProgress'
  pod 'SwiftyJSON'
  pod 'OAuthSwift'
end

target 'TripKit' do
  shared_pods
end

target 'TripKitTests' do
  shared_pods
  
  pod 'RxBlocking', git: 'https://github.com/ReactiveX/RxSwift.git', branch: 'swift4.0' #       '~> 3.0'
  pod 'RxTest', git: 'https://github.com/ReactiveX/RxSwift.git', branch: 'swift4.0' #       '~> 3.0'
end
