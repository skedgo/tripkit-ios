use_frameworks!
platform :ios, '9.3'

def shared_pods
  pod 'RxSwift', '~> 4.0.0'
  pod 'RxCocoa', '~> 4.0.0'
  
  pod 'ASPolygonKit'
  pod 'ASPolylineView'
  pod 'KeychainAccess', '~> 3.1'
  pod 'Kingfisher',     '~> 4.0'
  pod 'OAuthSwift',     '~> 1.2'

  pod 'KVNProgress' # For Bookings
  pod 'SwiftyJSON'  # For Bookings
  
  pod 'Marshal'     # For Agenda
end

target 'TripKit' do
  shared_pods
end

target 'TripKitTests' do
  shared_pods
  
  pod 'RxBlocking', '~> 4.0.0'
  pod 'RxTest', '~> 4.0.0'
end
