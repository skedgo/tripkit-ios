source 'https://github.com/CocoaPods/Specs.git'

use_frameworks!
platform :ios, '9.3'

def shared_pods
  pod 'RxSwift', git: 'https://github.com/ReactiveX/RxSwift.git', branch: 'swift4.0' #       '~> 3.0'
  pod 'RxCocoa', git: 'https://github.com/ReactiveX/RxSwift.git', branch: 'swift4.0' #       '~> 3.0'
  pod 'Marshal'

  pod 'ASPolygonKit'
  pod 'ASPolylineView'
  pod 'KeychainAccess', git: 'https://github.com/kishikawakatsumi/KeychainAccess.git', branch: 'master'
  pod 'Kingfisher',     '~> 4.0'
  pod 'OAuthSwift',     '~> 1.2'

  pod 'KVNProgress'
  pod 'SwiftyJSON'
end

target 'TripKit' do
  shared_pods
end

target 'TripKitTests' do
  shared_pods
  
  pod 'RxBlocking', git: 'https://github.com/ReactiveX/RxSwift.git', branch: 'swift4.0' #       '~> 3.0'
  pod 'RxTest', git: 'https://github.com/ReactiveX/RxSwift.git', branch: 'swift4.0' #       '~> 3.0'
end
