{
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "@tailwindcss/cli": "^4.1.11"
  },
  "dependencies": {
    "tailwindcss": "^4.1.11"
  },
  "scripts": {
    "tailwind:watch": "tailwindcss -i ./src/css/main.css -o ./css/main.css --watch",
    "tailwind:build": "tailwindcss -i ./src/css/main.css -o ./css/main.css --minify",
    "build": "npm run tailwind:build",
    "dev": "npm run tailwind:watch"
  }
}
