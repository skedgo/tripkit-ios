{
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "cssnano": "^7.1.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "postcss-import": "^16.1.1",
    "prettier": "^3.6.2",
    "prettier-plugin-jinja-template": "^2.1.0",
    "prettier-plugin-tailwindcss": "^0.6.13",
    "tailwindcss": "^4.1.11"
  },
  "scripts": {
    "tailwind:watch": "tailwindcss -i ./src/css/main.css -o ./css/main.css --watch",
    "tailwind:build": "tailwindcss -i ./src/css/main.css -o ./css/main.css --minify",
    "postcss:watch": "NODE_ENV=development npx postcss ./src/css/main.css -o ./css/main.css --watch --config postcss.config.mjs",
    "postcss:build": "NODE_ENV=production npx postcss ./src/css/main.css -o ./css/main.css --config postcss.config.mjs",
    "build": "npm run postcss:build",
    "dev": "npm run postcss:watch"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11"
  }
}
